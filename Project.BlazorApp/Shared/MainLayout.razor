@using OA.Service;
@inherits LayoutComponentBase

<PageTitle>Project.BlazorApp</PageTitle>

<div class="page">
    <div class="sidebar">
@*        <NavMenu />*@
		<div class="top-row ps-3 navbar navbar-dark" style="background-color:lightblue">
			<div class="container-fluid">
                <a href=""><b>Sample Blazor App</b></a>
				@*<button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
					<span class="navbar-toggler-icon"></span>
				</button>*@
			</div>
		</div>

		<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
			<nav class="flex-column">
				<div class="nav-item px-3">
					<NavLink class="nav-link" href="" Match="NavLinkMatch.All">
						<span class="oi oi-home" aria-hidden="true"></span> Home
					</NavLink>
				</div>

				@if (LoggedUserService.IsUserLogged)
				{
					<div class="nav-item px-3">
						<NavLink class="nav-link" href="fetchuserlist">
							<span class="oi oi-list-rich" aria-hidden="true"></span> Show users list
						</NavLink>
					</div>
				}


				@if (LoggedUserService.IsUserLogged && LoggedUserService.UserPrivilages == 1)
				{
					<div class="nav-item px-3">
						<NavLink class="nav-link" href="fetchHistorylist">
							<span class="oi oi-list-rich" aria-hidden="true"></span> Show logging history
						</NavLink>
					</div>
				}

			</nav>
		</div>
    </div>

    <main>
        <div class="top-row px-4 auth">
            @if (LoggedUserService.IsUserLogged)
            {
                <a href="Manage">Czesc, @LoggedUserService.UserName!</a>
                <a href="Logout">Log out</a>
            }
            else
            {
                <a href="Registration">Register</a>
                <a href="Login">Login</a>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
	private bool collapseNavMenu = false;

	private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

	private void ToggleNavMenu()
	{
		collapseNavMenu = !collapseNavMenu;
	}
}